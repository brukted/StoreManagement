<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="540" prefWidth="990" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group_10.storemanagement.LoginWindow">
   <children>
      <HBox alignment="CENTER">
         <children>
          <VBox alignment="TOP_CENTER" prefHeight="241.0" prefWidth="225.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Label text="Login">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="usernameField" promptText="Username">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </TextField>
                  <PasswordField fx:id="passwordField" promptText="Password">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </PasswordField>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginPressed" text="Login">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
